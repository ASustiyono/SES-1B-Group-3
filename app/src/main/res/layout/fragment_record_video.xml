<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_invert"
    android:orientation="vertical"
    tools:context="group3.seshealthpatient.fragments.RecordVideoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/record_video_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="15dp"
                android:background="#fff633"
                android:fontFamily="@font/oswald"
                android:letterSpacing="0.1"
                android:text="RECORD VIDEO SNIPPET"
                android:textColor="@color/checkUp_redTxt"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/upload_video_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/open_gallery_btn"
                android:layout_margin="15dp"
                android:background="@color/whiteColor"
                android:fontFamily="@font/oswald"
                android:letterSpacing="0.1"
                android:text="Upload Video"
                android:textColor="@color/text_dark_gray"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
