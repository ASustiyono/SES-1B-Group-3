<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_invert"
    android:orientation="vertical"
    tools:context="group3.seshealthpatient.fragments.RecordVideoFragment">

    <Button
        android:id="@+id/record_video_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="RECORD VIDEO SNIPPET" />

    <Button
        android:id="@+id/open_gallery_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/record_video_btn"
        android:text="Open System Gallery" />

    <Button
        android:id="@+id/upload_video_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/open_gallery_btn"
        android:text="Upload Video" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_margin="10dp"
        android:scaleType="fitStart"
        android:src="@drawable/temp_video_upload" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="510dp"
        android:layout_marginTop="0dp" />

</LinearLayout>
