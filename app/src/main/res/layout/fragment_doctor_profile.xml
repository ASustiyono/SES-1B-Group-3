<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/blank_frag_msg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:gravity="top|center"
    android:orientation="vertical"
    tools:context="group3.seshealthpatient.fragments.DoctorProfileFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/doctor_edit_btn"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/oswald"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="LAST UPDATED: 30/12/18"
            android:textAlignment="center"
            android:textColor="@color/checkUp_yellow"
            android:textStyle="bold" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/whiteColor"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_margin="10dp"
            android:src="@drawable/profile_dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/doctor_userInfo_firstName_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_semibold"
                android:textAlignment="textEnd"
                android:textAllCaps="true"
                android:textColor="@color/text_dark_gray"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/doctor_userInfo_lastName_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_semibold"
                android:textAlignment="textStart"
                android:textAllCaps="true"
                android:textColor="@color/text_dark_gray"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:letterSpacing="0.1"
                android:text="FULL"
                android:textAlignment="textEnd"
                android:textColor="@color/text_title_lightGray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:letterSpacing="0.1"
                android:text="NAME"
                android:textAlignment="viewStart"
                android:textColor="@color/text_title_lightGray" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/doctor_userInfo_age_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_semibold"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/text_dark_gray"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/doctor_userInfo_height_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_semibold"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/text_dark_gray"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/doctor_userInfo_weight_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_semibold"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:letterSpacing="0.1"
                android:text="AGE"
                android:textAlignment="center"
                android:textColor="@color/text_title_lightGray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:letterSpacing="0.1"
                android:text="HEIGHT"
                android:textAlignment="center"
                android:textColor="@color/text_title_lightGray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:letterSpacing="0.1"
                android:text="WEIGHT"
                android:textAlignment="center"
                android:textColor="@color/text_title_lightGray" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/doctor_userInfo_gender_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_semibold"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/text_dark_gray"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/doctor_userInfo_bloodType_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_semibold"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:letterSpacing="0.1"
                android:text="GENDER"
                android:textAlignment="center"
                android:textColor="@color/text_title_lightGray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:letterSpacing="0.1"
                android:text="ADDRESS"
                android:textAlignment="center"
                android:textColor="@color/text_title_lightGray" />
        </TableRow>

    </LinearLayout>


</LinearLayout>
