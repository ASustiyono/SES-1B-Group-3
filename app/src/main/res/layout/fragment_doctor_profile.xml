<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/blank_frag_msg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:gravity="top|center"
    android:orientation="vertical"
    tools:context="group3.seshealthpatient.fragments.DoctorProfileFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/doctor_edit_btn"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/oswald"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="LAST UPDATED: 30/12/18"
            android:textAlignment="center"
            android:textColor="@color/checkUp_yellow"
            android:textStyle="bold" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@android:color/background_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_margin="10dp"
                android:src="@drawable/profile_dp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:letterSpacing="0.1"
                android:text="FULL NAME"
                android:textAlignment="center"
                android:textColor="@color/text_title_lightGray" />

            <TextView
                android:id="@+id/doctor_fullName_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_semibold"
                android:padding="5dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/text_dark_gray"
                android:textSize="24sp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans"
                    android:letterSpacing="0.1"
                    android:text="GENDER"
                    android:textAlignment="center"
                    android:textColor="@color/text_title_lightGray" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans"
                    android:letterSpacing="0.1"
                    android:text="AGE"
                    android:textAlignment="center"
                    android:textColor="@color/text_title_lightGray" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/doctor_gender_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/doctor_age_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="24sp" />
            </TableRow>

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:letterSpacing="0.1"
                android:text="CLINIC NAME"
                android:textAlignment="center"
                android:textColor="@color/text_title_lightGray" />

            <TextView
                android:id="@+id/clinic_name_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_semibold"
                android:padding="5dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/text_dark_gray"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:letterSpacing="0.1"
                android:text="CLINIC NUMBER"
                android:textAlignment="center"
                android:textColor="@color/text_title_lightGray" />

            <TextView
                android:id="@+id/clinic_number_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_semibold"
                android:padding="5dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/text_dark_gray"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:letterSpacing="0.1"
                android:text="CLINIC EMAIL"
                android:textAlignment="center"
                android:textColor="@color/text_title_lightGray" />

            <TextView
                android:id="@+id/clinic_email_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_semibold"
                android:padding="5dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/text_dark_gray"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:letterSpacing="0.1"
                android:text="CLINIC ADDRESS"
                android:textAlignment="center"
                android:textColor="@color/text_title_lightGray" />

            <TextView
                android:id="@+id/clinic_address_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_semibold"
                android:padding="5dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/text_dark_gray"
                android:textSize="24sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
