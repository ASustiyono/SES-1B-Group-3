<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/blank_frag_msg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:gravity="top|center"
    android:orientation="vertical"
    tools:context="group3.seshealthpatient.fragments.DoctorProfileFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/doctor_edit_btn"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/oswald"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="LAST UPDATED: 30/12/18"
            android:textAlignment="center"
            android:textColor="@color/checkUp_yellow"
            android:textStyle="bold" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/whiteColor"
        android:orientation="vertical"
        android:padding="5dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/profile_dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans"
                    android:letterSpacing="0.1"
                    android:text="FULL NAME"
                    android:textAlignment="center"
                    android:textColor="@color/text_title_lightGray" />

                <TextView
                    android:id="@+id/doctor_userInfo_fullName_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="24sp" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans"
                        android:letterSpacing="0.1"
                        android:text="GENDER"
                        android:textAlignment="center"
                        android:textColor="@color/text_title_lightGray" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans"
                        android:letterSpacing="0.1"
                        android:text="AGE"
                        android:textAlignment="center"
                        android:textColor="@color/text_title_lightGray" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/doctor_userInfo_gender_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/doctor_userInfo_age_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="24sp" />
                </TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans"
                        android:letterSpacing="0.1"
                        android:text="CLINIC NAME"
                        android:textAlignment="center"
                        android:textColor="@color/text_title_lightGray" />

                    <TextView
                        android:id="@+id/doctor_userInfo_clinicName_textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans"
                        android:letterSpacing="0.1"
                        android:text="CLINIC ADDRESS"
                        android:textAlignment="center"
                        android:textColor="@color/text_title_lightGray" />

                    <TextView
                        android:id="@+id/doctor_userInfo_bloodType_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans"
                        android:letterSpacing="0.1"
                        android:text="WORK NUMBER"
                        android:textAlignment="center"
                        android:textColor="@color/text_title_lightGray" />

                    <TextView
                        android:id="@+id/doctor_userInfo_weight_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans"
                        android:letterSpacing="0.1"
                        android:text="EMERGENCY NUMBER"
                        android:textAlignment="center"
                        android:textColor="@color/text_title_lightGray" />

                    <TextView
                        android:id="@+id/doctor_userInfo_height_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans"
                        android:letterSpacing="0.1"
                        android:text="OPENING HOURS"
                        android:textAlignment="center"
                        android:textColor="@color/text_title_lightGray" />

                    <TextView
                        android:id="@+id/doctor_userInfo_openingHours_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="24sp" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</LinearLayout>
