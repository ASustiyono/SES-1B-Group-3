<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_invert"
    android:orientation="vertical"
    tools:context=".activities.PatientChangeEmailActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/setting_email_tool"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        app:popupTheme="@style/AppTheme"
        app:titleTextAppearance="@style/TitleBarTextAppearance" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/oswald"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:text="CHANGE EMAIL"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/patient_email_editTxt"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/nunito_bold"
            android:hint="NEW EMAIL"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/patient_confirmEmail_editTxt"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/nunito_bold"
            android:hint="CONFIRM EMAIL"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="20sp" />

    </LinearLayout>

    <Button
        android:id="@+id/patient_confirmEmail_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/checkUp_yellow"
        android:fontFamily="@font/oswald_bold"
        android:letterSpacing="0.1"
        android:text="CONFIRM"
        android:textColor="@color/checkUp_redTxt"
        android:textSize="18sp" />

</LinearLayout>